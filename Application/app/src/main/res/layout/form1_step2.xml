<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.assid.myapplication.form1_step2"
    android:background="#FFFFFF"
    >


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintVertical_bias="0.857"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:onClick="nextz"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <TableRow>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/logo" />
            </TableRow>

            <TableRow><TextView /></TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="what do you listen to when being ?"
                android:textColor="@color/black"
                />
            <TableRow><TextView /></TableRow>
            <TableRow><TextView /></TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="째In general"
                    android:textColor="@color/black"
                    />
                <Spinner
                    android:id="@+id/Ingeneral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/Music"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow><TextView /></TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="째Happy"
                    android:textColor="@color/black"
                    />
                <Spinner
                    android:id="@+id/Happy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/Music"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow><TextView /></TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="째Sad"
                    android:textColor="@color/black"
                    />
                <Spinner
                    android:id="@+id/Sad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/Music"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow><TextView /></TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="째Stressed"
                    android:textColor="@color/black"
                    />
                <Spinner
                    android:id="@+id/Surprised"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/Music"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow><TextView /></TableRow>
            <TableRow><TextView /></TableRow>
        </TableLayout>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>
