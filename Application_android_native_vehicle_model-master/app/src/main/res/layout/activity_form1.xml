<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.assid.myapplication.Form1"
    android:background="#FFFFFF"
    >


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintVertical_bias="0.857"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:onClick="nextz"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >

            <TableRow>
                <EditText
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Name"
                    />
                <EditText
                    android:id="@+id/LastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Last name"
                    />
            </TableRow>
            <TableRow><TextView /></TableRow>
            <EditText
                android:id="@+id/Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Age"
                />
            <TableRow><TextView /></TableRow>
            <TableRow><TextView /></TableRow>
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/black"
                    />


                <Spinner
                    android:id="@+id/Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Gender"
                    android:entries="@array/Gender"
                    android:textColor="@color/black"/>


            </TableRow>
            <TableRow><TextView /></TableRow>
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Occupation"
                    android:textColor="@color/black"
                    />



                <Spinner
                    android:id="@+id/Occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/Occupation"
                    android:textColor="@color/black"/>

            </TableRow>
            <TableRow><TextView /></TableRow>

                <EditText
                    android:id="@+id/OtherOccupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Other occupation "
                    />

            <TableRow><TextView /></TableRow>
            <TableRow><TextView /></TableRow>
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Working hours"
                    android:textColor="@color/black"
                    />
            </TableRow>
            <TableRow><TextView /></TableRow>
            <TableRow>

                <Spinner
                    android:id="@+id/From"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/From"
                    android:textColor="@color/black"/>
                <Spinner
                    android:id="@+id/To"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/To"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow><TextView /></TableRow>
            <TableRow><TextView /></TableRow>
        </TableLayout>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>
